{
  "name": "new-tab-text",
  "version": "1.1.0",
  "description": "A Chrome extension that transforms new tabs into a text editor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:extension": "NODE_ENV=development node scripts/build-manifest.js && vite build --mode development --watch",
    "build": "tsc && node scripts/build-manifest.js && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "setup": "npm install && npm run format"
  },
  "keywords": [
    "chrome-extension",
    "text-editor",
    "editor",
    "newtab",
    "typescript",
    "codemirror"
  ],
  "dependencies": {
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-markdown": "^6.2.0",
    "@codemirror/language": "^6.9.0",
    "@codemirror/language-data": "^6.3.1",
    "@codemirror/state": "^6.3.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.22.0",
    "@lezer/highlight": "^1.1.6"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "terser": "^5.24.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vitest": "^0.34.6",
    "jsdom": "^22.1.0",
    "@vitest/coverage-v8": "^0.34.6"
  },
  "author": "",
  "license": "MIT"
}
